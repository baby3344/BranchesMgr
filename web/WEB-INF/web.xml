<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">
    <servlet>
        <servlet-name>QueryAllBranchServlet</servlet-name>
        <servlet-class>servlet.QueryAllBranchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>QueryAllBranchServlet</servlet-name>
        <url-pattern>/QueryAll</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>checkBusinessNo</servlet-name>
        <servlet-class>servlet.QueryBranchByBusinessNoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>checkBusinessNo</servlet-name>
        <url-pattern>/checkBusinessNo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addBranch</servlet-name>
        <servlet-class>servlet.SaveBranchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addBranch</servlet-name>
        <url-pattern>/addBranch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showDetails</servlet-name>
        <servlet-class>servlet.QueryBranchById</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>showDetails</servlet-name>
        <url-pattern>/details</url-pattern>
    </servlet-mapping>

</web-app>
